<%= render "elements/signinheader" %>
<div class="container theme-showcase  main-body" role="main">
    <div class="row">
        <div class="col-sm-12 col-md-12 col-xs-12">
            <h1>記事タイトル：<%= @article.title %></h1>
        </div>
        <div class="col-sm-12 col-md-12 col-xs-12">
        <table class="table table-striped">
            <tr>
                <th>ユーザー名</th>
                <th>内容</th>
                <th>Action</th>
            </tr>                
            <% @comments.each do |comment| %>
                <tr>
                    <td><%= comment.username %></td>
                    <td><%= comment.body %></td>
                    <td class="action-data">
                        <%= link_to content_tag(:i, '', class: 'fa fa-trash'), blog_article_comment_path(@blog.url, @article.id, comment.id), method: :delete, data: {confirm: 'Are You Sure'}  %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>        
    </div>
</div>
